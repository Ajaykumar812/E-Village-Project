
@{
    ViewBag.Title = "UpdateRecorddonation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container home_contact p-5">
    <div class="row text-center">
        <div class="col-md-6">
            <h2>Contact Form</h2>
            <br />
            <form action="/AdminZone//AdminZone/UpdateRecorddonation" method="post">
                <input type="hidden" name="Email" value="@Model.Email" />
                <input name="Name" type="text" class="form form-control" placeholder="Name" required name="@Model.Name" /><br />
                <input name="Mobile_No" type="number" class="form form-control" placeholder="Mobile" name="@Model.Mobile" /><br />

                <textarea name=" Message" class="form form-control" placeholder="Message" rows="3" required name="@Model.Message"></textarea><br />


                <br />
                <input type="submit" class="form form-control bg-success w-25" />
            </form>
        </div>

        <div class="col-md-6">
            <h2>Google Map Location</h2>
            <br />

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7088.185420975708!2d82.96728518888037!3d27.341569905576108!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3996de69c4e16949%3A0xf3d48c128016227c!2sBel%20Garha%2C%20Uttar%20Pradesh%20272204!5e0!3m2!1sen!2sin!4v1693856001490!5m2!1sen!2sin" width="100%" height="350" style="border:1px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

        </div>
    </div>
</div>
